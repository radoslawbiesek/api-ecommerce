  "extends": "fastify-tsconfig",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": false,
    "sourceMap": true,
    "noUncheckedIndexedAccess": true,
    "target": "esnext"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**/*", "src/plugins/graphql/generated.ts", "dist/**/*"]
}
