{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "fastify-tsconfig",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": false,
    "sourceMap": true,
    "paths": {
      "database/*": ["./src/database/*"],
      "plugins/*": ["./src/plugins/*"],
      "repository/*": ["./src/repository/*"],
      "tests/*": ["./src/tests/*"]
    },
    "noUncheckedIndexedAccess": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**/*", "src/plugins/graphql/generated.ts", "dist/**/*"]
}
